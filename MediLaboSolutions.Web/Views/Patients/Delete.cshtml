@model MediLaboSolutions.Web.Models.Patients.PatientDto

@{
    ViewData["Title"] = "Supprimer un patient";
}

<h2 class="mb-4 text-danger">Supprimer un patient</h2>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <h5 class="card-title text-danger">Confirmez-vous la suppression du patient suivant ?</h5>

        @await Html.PartialAsync("Patients/_PatientDisplay", Model)

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Annuler
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Supprimer définitivement
                </button>
            </div>
        </form>
    </div>
</div>
