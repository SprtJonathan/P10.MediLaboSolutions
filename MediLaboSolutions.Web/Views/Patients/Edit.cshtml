@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto

@{
    ViewData["Title"] = "Modifier un patient";
}

<h1>Modifier un patient</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nom" class="control-label">@Html.DisplayNameFor(m => m.Nom)</label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prenom" class="control-label">@Html.DisplayNameFor(m => m.Prenom)</label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateNaissance" class="control-label">@Html.DisplayNameFor(m => m.DateNaissance)</label>
                <input asp-for="DateNaissance" class="form-control" type="date" />
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label">@Html.DisplayNameFor(m => m.Genre)</label>
                <select asp-for="Genre"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<EPatientGender>()">
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdressePostale" class="control-label">@Html.DisplayNameFor(m => m.AdressePostale)</label>
                <input asp-for="AdressePostale" class="form-control" />
                <span asp-validation-for="AdressePostale" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telephone" class="control-label">@Html.DisplayNameFor(m => m.Telephone)</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
