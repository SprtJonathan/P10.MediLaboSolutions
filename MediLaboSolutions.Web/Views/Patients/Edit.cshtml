@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto

@{
    ViewData["Title"] = "Modifier un patient";
}

<h1>Modifier un patient</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateNaissance" class="control-label"></label>
                <input asp-for="DateNaissance" class="form-control" type="date" />
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<EPatientGender>()">
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <fieldset class="border p-3 mt-3 mb-3">
                <legend class="w-auto">Adresse</legend>
                <hr />

                @if (Model.AdresseId == null || Model.AdresseId == 0)
                {
                    <input type="hidden" name="AdresseId" value="0" />
                }
                else
                {
                    <input type="hidden" asp-for="AdresseId" />
                }

                <div class="form-group">
                    <label asp-for="Adresse.Numero">Numéro</label>
                    <input asp-for="Adresse.Numero" class="form-control" />
                    <span asp-validation-for="Adresse.Numero" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adresse.Voie">Voie</label>
                    <input asp-for="Adresse.Voie" class="form-control" />
                    <span asp-validation-for="Adresse.Voie" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adresse.Ville">Ville</label>
                    <input asp-for="Adresse.Ville" class="form-control" />
                    <span asp-validation-for="Adresse.Ville" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adresse.CodePostal">Code postal</label>
                    <input asp-for="Adresse.CodePostal" class="form-control" />
                    <span asp-validation-for="Adresse.CodePostal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adresse.Pays">Pays</label>
                    <input asp-for="Adresse.Pays" class="form-control" />
                    <span asp-validation-for="Adresse.Pays" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
