@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto
@{
    ViewData["Title"] = "Ajouter un patient";
}

<h1>Ajouter un patient</h1>

<form asp-action="Create" method="post">
    <input asp-for="Id" type="hidden" value="0" />

    <div class="form-group">
        <label class="control-label">
            Nom
            <input asp-for="Nom" class="form-control d-block mt-1" />
        </label>
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">
            Prénom
            <input asp-for="Prenom" class="form-control d-block mt-1" />
        </label>
        <span asp-validation-for="Prenom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">
            Date de naissance
            <input asp-for="DateNaissance" class="form-control d-block mt-1" type="date" />
        </label>
        <span asp-validation-for="DateNaissance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">
            Genre
            <select asp-for="Genre"
                    class="form-control d-block mt-1"
                    asp-items="Html.GetEnumSelectList<EPatientGender>()">
            </select>
        </label>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">
            Adresse postale
            <input asp-for="AdressePostale" class="form-control d-block mt-1" />
        </label>
        <span asp-validation-for="AdressePostale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">
            Téléphone
            <input asp-for="Telephone" class="form-control d-block mt-1" type="number" />
        </label>
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}