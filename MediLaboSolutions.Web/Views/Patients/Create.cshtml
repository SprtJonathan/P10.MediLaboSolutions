@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto

@{
    ViewData["Title"] = "Ajouter un patient";
}

<h2 class="mb-4">Ajouter un patient</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <input asp-for="Id" type="hidden" value="0" />

            @await Html.PartialAsync("Patients/_PatientFormFields", Model)
            @await Html.PartialAsync("Patients/_AdresseFormFields", Model, new ViewDataDictionary(ViewData) { { "IsEdit", false } })

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Créer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
