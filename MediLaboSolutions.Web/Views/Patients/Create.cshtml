@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto

@{
    ViewData["Title"] = "Ajouter un patient";
}

<h1>Ajouter un patient</h1>

<form asp-action="Create" method="post">
    <input asp-for="Id" type="hidden" value="0" />

    @await Html.PartialAsync("Patients/_PatientFormFields", Model)
    @await Html.PartialAsync("Patients/_AdresseFormFields", Model, new ViewDataDictionary(ViewData) { { "IsEdit", false } })

    <div class="form-group">
        <label asp-for="Telephone">Téléphone</label>
        <input asp-for="Telephone" class="form-control" type="number" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}