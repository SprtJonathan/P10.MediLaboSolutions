@using MediLaboSolutions.Web.Models.Patients;
@model List<PatientDto>
@{
    ViewData["Title"] = "Liste des patients";
}

<h1>Liste des patients</h1>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Genre</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Nom</td>
                    <td>@patient.Prenom</td>
                    <td>@patient.DateNaissance.ToShortDateString()</td>
                    <td>@patient.Genre</td>
                    <td>
                        @if (patient.Adresse != null)
                        {
                            <div>@patient.Adresse.Numero @patient.Adresse.Voie</div>
                            <div>@patient.Adresse.CodePostal @patient.Adresse.Ville</div>
                        }
                        else
                        {
                            <em>Non renseignée</em>
                        }
                    </td>
                    <td>@patient.Telephone</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@patient.Id">Détails</a> |
                        <a asp-action="Edit" asp-route-id="@patient.Id">Modifier</a> |
                        <a asp-action="Delete" asp-route-id="@patient.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Aucune patient</div>
}

<a asp-action="Create">Ajouter un patient</a>