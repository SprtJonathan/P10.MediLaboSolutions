@model MediLaboSolutions.Web.Models.Patients.PatientDto
@{
    var isEdit = ViewData["IsEdit"] as bool? ?? false;
}

<hr class="my-4" />
<h4 class="mb-3">Adresse</h4>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="Adresse.Numero" class="form-label">Numéro</label>
        <input asp-for="Adresse.Numero" class="form-control" />
        <span asp-validation-for="Adresse.Numero" class="text-danger small"></span>
    </div>

    <div class="col-md-8 mb-3">
        <label asp-for="Adresse.Voie" class="form-label">Voie</label>
        <input asp-for="Adresse.Voie" class="form-control" />
        <span asp-validation-for="Adresse.Voie" class="text-danger small"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Adresse.Ville" class="form-label">Ville</label>
        <input asp-for="Adresse.Ville" class="form-control" />
        <span asp-validation-for="Adresse.Ville" class="text-danger small"></span>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="Adresse.CodePostal" class="form-label">Code postal</label>
        <input asp-for="Adresse.CodePostal" class="form-control" />
        <span asp-validation-for="Adresse.CodePostal" class="text-danger small"></span>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="Adresse.Pays" class="form-label">Pays</label>
        <input asp-for="Adresse.Pays" class="form-control" />
        <span asp-validation-for="Adresse.Pays" class="text-danger small"></span>
    </div>
</div>

@if (isEdit)
{
    <input type="hidden" asp-for="Adresse.Id" />
}
