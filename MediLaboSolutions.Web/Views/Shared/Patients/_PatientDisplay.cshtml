@model MediLaboSolutions.Web.Models.Patients.PatientDto

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nom)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nom)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Prenom)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Prenom)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DateNaissance)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.DateNaissance)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Genre)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

    <dt class="col-sm-2">Adresse</dt>
    <dd class="col-sm-10">
        @if (Model.Adresse != null)
        {
            <div>@Model.Adresse.Numero @Model.Adresse.Voie</div>
            <div>@Model.Adresse.CodePostal @Model.Adresse.Ville</div>
            <div>@Model.Adresse.Pays</div>
        }
        else
        {
            <em>Adresse non renseignée</em>
        }
    </dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Telephone)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Telephone)</dd>
</dl>
