@using MediLaboSolutions.Common.Enumerables
@model MediLaboSolutions.Web.Models.Patients.PatientDto

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Nom" class="form-label">Nom <i style="color: red;">*</i></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger small"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="Prenom" class="form-label">Prénom <i style="color: red;">*</i></label>
        <input asp-for="Prenom" class="form-control" />
        <span asp-validation-for="Prenom" class="text-danger small"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="DateNaissance" class="form-label">Date de naissance <i style="color: red;">*</i></label>
        <input asp-for="DateNaissance" type="date" class="form-control" />
        <span asp-validation-for="DateNaissance" class="text-danger small"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="Genre" class="form-label">Genre <i style="color: red;">*</i></label>
        <select asp-for="Genre" class="form-select" asp-items="Html.GetEnumSelectList<EPatientGender>()"></select>
        <span asp-validation-for="Genre" class="text-danger small"></span>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Telephone" class="form-label">Téléphone</label>
    <input asp-for="Telephone" class="form-control" type="number" />
    <span asp-validation-for="Telephone" class="text-danger small"></span>
</div>
