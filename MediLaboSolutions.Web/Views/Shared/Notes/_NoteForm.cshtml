@model MediLaboSolutions.Web.Models.Notes.NoteDto

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-3">Ajouter une note</h5>

        <form asp-controller="Notes" asp-action="Create" method="post" id="add-note-form">
            <input asp-for="PatientId" type="hidden" />

            <div class="mb-3">
                <label asp-for="PraticienUsername" class="form-label">Praticien</label>
                <input asp-for="PraticienUsername" class="form-control" />
                <span asp-validation-for="PraticienUsername" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Texte" class="form-label">Note</label>
                <textarea asp-for="Texte" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Texte" class="text-danger small"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Ajouter
                </button>
            </div>
        </form>
    </div>
</div>
